@model MN_WEB.Entities.UsuarioEnt

@{
    ViewBag.Title = "Recuperar";
    Layout = "~/Views/Shared/_Layout - Inicio.cshtml";
}

@using (Html.BeginForm("RecuperarContrasenna", "Home", FormMethod.Post))
{
    <div class="d-flex flex-column justify-content-between">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-md-12">
                <div class="card card-default mb-0">
                    <div class="card-header pb-0">
                        <div class="app-brand w-100 d-flex justify-content-center border-bottom-0">
                            <a class="w-auto pl-0" href="/index.html">
                                <img src="~/WebStyles/images/logo.png" alt="Mono">
                                <span class="brand-name text-dark">GO CLASS</span>
                            </a>
                        </div>
                    </div>

                    @if (ViewBag.MsjPantalla != null)
                    {
                        <div style="color:white" class="alert alert-primary" role="alert">
                            @ViewBag.MsjPantalla
                        </div>
                    }

                    <div class="card-body px-5 pb-5 pt-0">
                        <div class="row">
                            <div class="form-group col-md-12 mb-4">
                                @Html.TextBoxFor(m => m.CorreoElectronico, new { @type = "email", @class = "form-control input-lg", @placeholder = "Correo Electrónico" })
                            </div>

                            <div class="col-md-12" style="text-align:center">

                                <button type="submit" class="btn btn-primary btn-pill mb-4">Recuperar Contraseña</button>
                                <p>
                                    <a class="text-blue" href="@Url.Action("Index","Home")">Ir al Inicio</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}